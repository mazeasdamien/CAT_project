<Window x:Class="FanucDDS_wpf_Damien_Mazeas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FanucDDS_wpf_Damien_Mazeas"
        mc:Ignorable="d"
        Title="Fanuc DDS Teleop Monitor" Height="600" Width="900"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="Foreground" Value="#00BFFF"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style TargetType="Button" x:Key="WindowButtonStyle">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="CloseButtonStyle" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar / Header -->
        <Border Background="#252526" Padding="10,5" MouseDown="TitleBar_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title and Status -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                    <TextBlock Text="FANUC ROBOT TELEOP" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Border Background="#00BFFF" CornerRadius="4" Padding="6,1" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="LIVE" FontSize="10" FontWeight="Bold" Foreground="Black"/>
                    </Border>
                </StackPanel>

                <!-- Window Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="—" Style="{StaticResource WindowButtonStyle}" Click="Minimize_Click"/>
                    <Button Content="☐" Style="{StaticResource WindowButtonStyle}" Click="Maximize_Click"/>
                    <Button Content="✕" Style="{StaticResource CloseButtonStyle}" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- J1 -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="JOINT 1" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding J1, StringFormat=N2}" Style="{StaticResource ValueStyle}"/>
                    <TextBlock Text="deg" Foreground="#666" HorizontalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- J2 -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="JOINT 2" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding J2, StringFormat=N2}" Style="{StaticResource ValueStyle}"/>
                    <TextBlock Text="deg" Foreground="#666" HorizontalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- J3 -->
            <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource CardStyle}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="JOINT 3" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding J3, StringFormat=N2}" Style="{StaticResource ValueStyle}"/>
                    <TextBlock Text="deg" Foreground="#666" HorizontalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- J4 -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="JOINT 4" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding J4, StringFormat=N2}" Style="{StaticResource ValueStyle}"/>
                    <TextBlock Text="deg" Foreground="#666" HorizontalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- J5 -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="JOINT 5" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding J5, StringFormat=N2}" Style="{StaticResource ValueStyle}"/>
                    <TextBlock Text="deg" Foreground="#666" HorizontalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- J6 -->
            <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource CardStyle}">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="JOINT 6" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding J6, StringFormat=N2}" Style="{StaticResource ValueStyle}"/>
                    <TextBlock Text="deg" Foreground="#666" HorizontalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer / Status -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="Status: " FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="0,0,20,0">
                    <TextBlock Text="Clock: " FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding Clock}" Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="3">
                    <TextBlock Text="ID: " FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding SampleId}" Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
