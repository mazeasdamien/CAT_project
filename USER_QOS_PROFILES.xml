<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://community.rti.com/schema/current/rti_dds_profiles.xsd">
    <qos_library name="CAT_Industrial_Library">
        <qos_profile name="SafetyCritical_Profile" is_default_qos="true">
            <base_name>
                <element>BuiltinQosLib::Generic.StrictReliable</element>
            </base_name>
            <!-- Optimization for Low Latency -->
            <data_reader_qos>
                <protocol>
                    <rtps_reliable_reader>
                        <min_heartbeat_response_delay>
                            <sec>0</sec>
                            <nanosec>0</nanosec>
                        </min_heartbeat_response_delay>
                    </rtps_reliable_reader>
                </protocol>
            </data_reader_qos>
        </qos_profile>
    </qos_library>
</dds>